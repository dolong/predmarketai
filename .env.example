# Database Configuration - Supabase PostgreSQL
# Copy this file to .env and fill in your actual values
# Get these from: Supabase Dashboard → Project Settings → Database

# Supabase Connection String (Primary method)
# Format: postgresql://postgres:[YOUR-PASSWORD]@[HOST]:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Or use individual settings (Alternative method)
DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=[YOUR-PASSWORD]
DB_NAME=postgres

# Supabase API Keys (for Supabase client features)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Database Connection Pool Settings (Optional)
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# Application Settings (Optional)
NODE_ENV=development
PORT=3000

# External API Keys
SYNAPSE_API_KEY=[YOUR-SYNAPSE-API-KEY]
